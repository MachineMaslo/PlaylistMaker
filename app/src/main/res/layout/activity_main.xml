<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_screen_bg_color"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/screen_padding_horizontal"
    android:paddingVertical="@dimen/screen_padding_vertical">

    <TextView
        style="@style/title_style"
        android:layout_marginVertical="@dimen/title_marginbottom"
        android:text="@string/app_name"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/searchButton"
            style="@style/activity_main_button_style"
            android:text="@string/search_title"
            app:icon="@drawable/search_icon" />

        <Button
            android:id="@+id/libraryButton"
            style="@style/activity_main_button_style"
            android:text="@string/library_title"
            app:icon="@drawable/music_icon" />

        <Button
            android:id="@+id/settingsButton"
            style="@style/activity_main_button_style"
            android:text="@string/settings_title"
            app:icon="@drawable/settings_icon" />
    </LinearLayout>

</LinearLayout>