<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="activity_main_button_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_screen_text_color</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:layout_marginVertical">@dimen/activity_main_buttons_marginvertical</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconTint">@color/main_screen_text_color</item>
    </style>

    <style name="switch_style" parent="Base.Theme.PlaylistMaker">
        <item name="android:thumb">@drawable/knob</item>
        <item name="android:track">@drawable/track</item>
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>

    <style name="settings_list_element_style" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_marginVertical">@dimen/settings_list_element_marginvertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="returnbutton_style" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">@dimen/return_button_size</item>
        <item name="android:layout_height">@dimen/return_button_size</item>
        <item name="android:tint">@color/text_color</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:src">@drawable/arrow_back_icon</item>
        <item name="android:layout_marginEnd">@dimen/return_button_marginright</item>
        <item name="android:backgroundTint">@color/clear</item>
    </style>

    <style name="setting_imagebutton_style" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">@dimen/settings_imagebutton_size</item>
        <item name="android:layout_height">@dimen/settings_imagebutton_size</item>
        <item name="android:tint">@color/secondary_text_color</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">@color/clear</item>
    </style>

    <style name="edittext_style" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">@dimen/edittext_height</item>
        <item name="android:background">@drawable/edittext_shape</item>
        <item name="android:backgroundTint">@color/edittext_bg_color</item>
        <item name="android:textColor">@color/main_screen_text_color</item>
        <item name="android:textColorHint">@color/edittext_hint_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/edittext_drawable_padding</item>
        <item name="android:paddingHorizontal">@dimen/edittext_padding_horizontal</item>
        <item name="android:drawableTint">@color/edittext_hint_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/edittext_cursor</item>
    </style>

    <style name="title_style" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="open_song_arrow_style" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">@dimen/song_cover_size</item>
        <item name="android:layout_height">@dimen/song_cover_size</item>
        <item name="android:background">@color/clear</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:src">@drawable/arrow_forward_icon</item>
        <item name="tint">@color/secondary_text_color</item>
        <item name="android:scaleType">center</item>
    </style>

</resources>