<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_screen_bg_color"
    android:padding="@dimen/screen_padding">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/title_marginbottom"
            android:fontFamily="@font/google_sans_medium"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/searchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/activity_main_buttons_marginvertical"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/google_sans_medium"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/search_title"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="@dimen/title_text_size"
                app:cornerRadius="@dimen/corner_radius"
                app:icon="@drawable/search_icon"
                app:iconGravity="textStart"
                app:iconSize="@dimen/icon_size"
                app:iconTint="@color/text_color" />

            <Button
                android:id="@+id/libraryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/activity_main_buttons_marginvertical"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/google_sans_medium"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/library_title"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="@dimen/title_text_size"
                app:cornerRadius="@dimen/corner_radius"
                app:icon="@drawable/music_icon"
                app:iconGravity="textStart"
                app:iconSize="@dimen/icon_size"
                app:iconTint="@color/text_color" />

            <Button
                android:id="@+id/settingsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/activity_main_buttons_marginvertical"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/google_sans_medium"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/settings_title"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="@dimen/title_text_size"
                app:cornerRadius="@dimen/corner_radius"
                app:icon="@drawable/settings_icon"
                app:iconGravity="textStart"
                app:iconSize="@dimen/icon_size"
                app:iconTint="@color/text_color" />
        </LinearLayout>

</LinearLayout>